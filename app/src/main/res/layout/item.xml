<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgWeapon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/m416"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"

            card_view:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/nameWeapon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/imgWeapon"
            android:text="Nama Senjata"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imgWeapon"
            card_view:layout_constraintTop_toTopOf="@+id/imgWeapon"

            />

        <TextView
            android:id="@+id/textType"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Type    : "
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/nameWeapon"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/nameWeapon"
            card_view:layout_constraintTop_toBottomOf="@+id/nameWeapon"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/typeWeapon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Type Senjata"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/nameWeapon"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintRight_toRightOf="@+id/textType"
            card_view:layout_constraintStart_toEndOf="@+id/textType"
            card_view:layout_constraintTop_toBottomOf="@+id/nameWeapon"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textAmmo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="220dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Ammo :"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/typeWeapon"
            card_view:layout_constraintStart_toStartOf="@+id/nameWeapon"
            card_view:layout_constraintTop_toBottomOf="@+id/typeWeapon"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Ammo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Type Ammo"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/typeWeapon"
            card_view:layout_constraintRight_toRightOf="@+id/textAmmo"
            card_view:layout_constraintStart_toEndOf="@+id/textAmmo"
            card_view:layout_constraintTop_toBottomOf="@+id/typeWeapon"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="deskripsi"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/typeWeapon"
            card_view:layout_constraintRight_toRightOf="@+id/textAmmo"
            card_view:layout_constraintStart_toEndOf="@+id/textAmmo"
            card_view:layout_constraintTop_toBottomOf="@+id/typeWeapon"
            card_view:layout_constraintVertical_bias="0.0"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/Magazine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="magazine"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/typeWeapon"
            card_view:layout_constraintRight_toRightOf="@+id/textAmmo"
            card_view:layout_constraintStart_toEndOf="@+id/textAmmo"
            card_view:layout_constraintTop_toBottomOf="@+id/typeWeapon"
            card_view:layout_constraintVertical_bias="0.0"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/ReloadTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="reload time"
            card_view:layout_constraintBottom_toBottomOf="@+id/imgWeapon"
            card_view:layout_constraintEnd_toEndOf="@+id/typeWeapon"
            card_view:layout_constraintRight_toRightOf="@+id/textAmmo"
            card_view:layout_constraintStart_toEndOf="@+id/textAmmo"
            card_view:layout_constraintTop_toBottomOf="@+id/typeWeapon"
            card_view:layout_constraintVertical_bias="0.0"
            android:visibility="invisible"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>